<h1>Edit item</h1>


<%= form_with model: @item do |f| %>

  
    <div class="field">
        <h3>Status</h3>
    
    <%= f.radio_button :status, 'Sampled' %>
    <%= f.label :status, 'Sampled', :value => 'Sampled' %>

    <%= f.radio_button :status, 'Commissioned', checked: true, value: @item.status %> 
    <%= f.label :status, 'Commissioned', :value => 'Commissioned' %>

    <%= f.radio_button :status, 'Destroyed' %>
    <%= f.label :status, 'Destroyed', :value => 'Destroyed' %>
  </div>

  

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

  <% end %>